@model ServiceManager.Web.ViewModels.ExcelUploadViewModel



<div class="modal" id="UploadExcel">

    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="UpdateCareerLabel">Upload Excel</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>

                </button>

            </div>

            <div class="modal-body">
                <form asp-action="UploadExcelService" asp-controller="Service" method="post" role="form" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CvPath" class="control-label"></label>
                        <input asp-for="CVfile" class="form-control" type="file" id="file" accept=".xls,.xlsx" />
                        <span asp-validation-for="CvPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>*@
        </div>

    </div>
</div>



