                                <button type="button" class="btn bg-primary" data-toggle="ajax-modal" data-target="#UpdateService" data-url="@Url.Action($"EditService/{item.Srn}")"> Edit/Disable</button>
                                @* @Html.ActionLink("Edit2", "EditService", new { id = item.Srn }, new {@class = "ui-btn",data_toggle="ajax-modal", data-target="#UpdateService" })*@

                                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
