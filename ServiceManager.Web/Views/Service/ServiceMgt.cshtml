@model IEnumerable<ServiceManager.Web.ViewModels.ServiceViewModel>

@*@{
    ViewData["Title"] = "ServiceMgt";
    }

    <h1>ServiceMgt</h1>*@
<head>
    <script src="~/js/site.js"></script>
</head>
<div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <form asp-controller="Service" asp-action="ServiceSearch" method="get">
                    <div class="row">
                        <div class="col-md-7">                           
                            <input type="text" name="SearchString" id="SearchString" placeholder="Search With Desc" />                           
                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>    
</div>
<div class="row">
    <div class="col-md-3">
        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#CreateNew" data-url="@Url.Action($"CreateService")"> Create Service</button>
    </div>
    <div class="col-md-3">
        @*<a asp-action="UploadExcelService" asp-controller="Service">Upload Excell</a>*@
        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#UploadExcel" data-url="@Url.Action($"UploadExcelService")"> Upload Excel</button>
    </div>
    <div class="col-md-3">
        @*<button type="button" class="btn btn-primary" data-url="@Url.Action($"ViewDisabledServices")"> View Disabled Services</button>*@
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ViewDisabledServices", "Service")'">View Disabled Services</button>
    </div>
    <div class="col-md-3">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ExportServices", "Service")'">Export</button>
    </div>
</div>

<div id="PlaceHolderHere"></div>

<div class="panel panel-success">
    <div class="panel-heading"></div>
    <div class="panel-body">
        <div class="row">
            <table class="table-bordered">
                <thead class="table th">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Srn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceDesc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Company)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Enddate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Daysnotification)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Frequency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        @* <th>
                            @Html.DisplayNameFor(model => model.SetupBy)
